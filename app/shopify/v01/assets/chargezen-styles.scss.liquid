
.chargezen-plan-selector {
  margin-bottom: 1em;

  // border: 1px solid #ddd;
  // padding: 10px;
  border-radius: 5px;

  @media(max-width: 810px) and (min-width: 400px) {
    display: flex;
    justify-content: center;
    grid-gap: 20px;
  }

  & > legend {
    display: none;
    padding: 0em 8px 0px 6px;
    font-weight: bold;
  }

  .plan-selector-group {
    margin-bottom: 1rem;
    border: 1px solid #4D506A;
    border-radius: 5px;
    padding: 11px 15px 11px 21px; 

    label {
      display: flex;
      align-items: center;
      grid-gap: 10px;
    }

    &:not(.group-available) {
      display: none;
    }

    &:not(.group-selected) > .plan-selector-plan {
      display: none;
    }

    input {
      min-height: 10px;
    }
  }

  .plan-selector-plan {
    padding-left: 20px;

    select {
      width: 100%;
      margin-bottom: 5px;
    }
  }

  
}

.chargezen-cart-selling-plan {
  display: block;
}
#chargezen-customer-portal-frame{
  min-height: 125vh;
}
.sec-deisgn {
  display: flex;
  justify-content: center;
  grid-gap: 20px;
  .plan-selector-group  {
    width: 160px;
    height: 196px;
    border: 1.5px solid #E3E4E4;
    display: flex;
    justify-content: center;

    input {
      display: none;
    }
  }
  
}

.active-check {
  background-color: #daf1f9;
}

.subscription-popup {
  position: relative; 
  display: inline-block;
  height: 35px;
  clear: both;

  .popup-div {
    position: absolute;
    display: none;
    background-color: #474747;
    width: 300px;
    padding: 15px;
    cursor: default;
    left: 0;
    text-align: left;
    white-space: normal;
    vertical-align: baseline;
    z-index: 1;
    top: 30px;
    height: 230px;

    &::before {
      content: "";
      display: block;
      width: 1px;
      border: 10px solid transparent;
      position: absolute;
      top: -20px;
      left: 0;
      border-bottom-color: #474747;
    }


    strong {
      color: white;
      margin-bottom: 25px;
      display:inline-block;
    }
    a {
      color: #4DD6B7;
    }
    p {
      color: lightgray;
    }
    .powered-by {
      background-color: #53bad3;
      padding: 6px;
      position: absolute;
      bottom: 26px;
      right: 0;
      border-radius: 20px 0px 0px 20px;
       p {
         color: white;
         font-size: 13px;
       }
    }
  }

  &:hover  .popup-div {
    display: block;

  }



}