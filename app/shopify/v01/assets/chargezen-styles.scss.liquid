
.chargezen-plan-selector {
  margin-bottom: 1em;

  // border: 1px solid #ddd;
  // padding: 10px;
  border-radius: 5px;

  @media(max-width: 810px) and (min-width: 400px) {
    display: flex;
    justify-content: center;
    grid-gap: 20px;
  }

  & > legend {
    display: none;
    padding: 0em 8px 0px 6px;
    font-weight: bold;
  }

  .plan-selector-group {
    margin-bottom: 1rem;
    border: 1px solid #4D506A;
    border-radius: 5px;
    padding: 11px 15px 11px 21px; 

    label {
      // display: flex;
      align-items: center;
      grid-gap: 10px;
    }
  

    &:not(.group-available) {
      display: none;
    }

    &:not(.group-selected) > .plan-selector-plan {
      display: none;
    }

    input {
      min-height: 10px;
    }
  }

  .plan-selector-plan {
    padding-left: 20px;

    select {
      width: 100%;
      margin-bottom: 5px;
    }
  }

  
}

.chargezen-cart-selling-plan {
  display: block;
}
#chargezen-customer-portal-frame{
  min-height: 125vh;
}
.sec-deisgn {
  display: flex;
  justify-content: center;
  grid-gap: 20px;
  .plan-selector-group  {
    width: 160px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    border: 1.5px solid #e3e4e4;
    text-align: center;
    & > p {
      font-weight: bold;
    }
    .best-seller {
      background-color: #FFB800;
      padding: 4px 4px 3px 3px;
      border-radius: 3px;
      width: 85px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin: 0 auto;
      margin-bottom: 30px;

       span {
         font-size: 9px;
         color: white;
         margin-left: 3px;
         font-weight: 900;
       }
       & + p {
        font-weight: bold;
        & + p {
          font-weight: bold;
        }
      }
    }

    .del-price {
      del {
        color :#828384;
        font-size: 12px;
      }
      + p {
        font-weight: 800;
      }
    }
  
     
    input {
      display: none;
    }
  }
  
}

.three-design {
 .plan-selector-group {
    border: 0;
  }
  .custom-mnakrer {
    margin-left: 26px;
    li::marker {
      font-size: 1em;
      content: '\f00c';
      font-family: 'FontAwesome';
    }
    li {
      padding-left: .5em;
    }
  }
  .popup-design {
    #myBtn {
      cursor: pointer;
      margin-top: 20px;

    }
    .modal {
      display: none;
      position: fixed;
      z-index: 5;
      padding-top: 100px;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgb(0,0,0);
      background-color: rgba(0,0,0,0.4);
    }
    .modal-parent {
      background-color: #fefefe;
      margin: auto;
      border: 1px solid #888;
      width: 40%;
      border-radius: .5rem;
    }
    .modal-header {
      padding: 20px;
      border-bottom: 1px solid lightgrey;

      p {
        font-size: 24px;
      }
      
    }
    .modal-content {
      padding: 2rem 5.8rem;
      & > ul {
        margin-bottom: 1.1rem;
        & > li {
          padding-bottom: 1rem;
          position: relative;
          padding-left: 1em;
          letter-spacing: .016rem;
          font-weight: 700;
          p {
            margin-top: .3rem;
            margin-bottom: -.4rem;
            font-size: 1rem;
            line-height: 1.8rem;
            letter-spacing: .013rem;
            font-weight: 300;
          }
        }
        li::marker {
            content: '\f058';
            font-size: 1.4em;;
            font-family: 'FontAwesome';
            color: #7aae7c;
            
        }
      }
      & > button {
        padding: 1.7rem 3rem;
        font-size: 1.2rem;
        color: white;
        background-color: #c8102e;
        border:0;
        border-radius: .5rem;
        display: flex;
        font-weight: 700;
        margin: 0 auto;
      }
    }
    .close {
      color: #aaaaaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      &:hover {
        color: #000;
        text-decoration: none;
        cursor: pointer;
      }
      &:focus {
        color: #000;
        text-decoration: none;
        cursor: pointer;
      }
    }
    
  }

  .discount-section {
    margin-left: 17px;
    ul {
      display: flex;
      // flex-wrap: wrap;
      margin-top: .6rem;
      margin-bottom: -1rem;
      // margin-left: 4.1rem;
      list-style: none;
      .varint {
        display: flex;
        flex-direction: column;
        padding: 0 .5rem;
        margin-bottom: 1rem;
        width: 120px;
        .offer-section {
          font-size: 1.4rem;
          line-height: 1.8rem;
          letter-spacing: .016rem;
          label {
            display: block;
            padding: .5rem 1rem;
            cursor: pointer;
            border: .1rem solid hsla(0,0%,59.2%,.3);
            border-radius: .5rem;
            // box-shadow: 0 1rem 3rem 0 hsl(0deg 0% 73% / 20%);
          }
  
          span {
            margin-left: .4rem;
            opacity: .6;
            font-size: 14px;
          }
        }
        .save-offer {
          margin-top: .3rem;
          font-size: .9rem;
          line-height: 1.8rem;
          text-align: center;
          letter-spacing: .012rem;
        }
      }
    }
    
  }
}

.active-check {
  background-color: #daf1f9;
}

.subscription-popup {
  position: relative; 
  display: inline-block;
  height: 35px;
  clear: both;
  .chrge-logo {
    display: flex;
    align-items: center;
     p{ 
       margin-left: 14px;
       white-space: nowrap;
       font-size: 16px;
     }
  }

  .popup-div {
    position: absolute;
    display: none;
    background-color: #474747;
    width: 300px;
    padding: 15px;
    cursor: default;
    left: 0;
    text-align: left;
    white-space: normal;
    vertical-align: baseline;
    z-index: 1;
    top: 30px;
    height: 230px;

    &::before {
      content: "";
      display: block;
      width: 1px;
      border: 10px solid transparent;
      position: absolute;
      top: -20px;
      left: 0;
      border-bottom-color: #474747;
    }

 
    strong {
      color: white;
      margin-bottom: 25px;
      display:inline-block;
    }
    a {
      color: #4DD6B7;
    }
    p {
      color: lightgray;
      white-space: pre-wrap;
    }
    .powered-by {
      background-color: #007EFF;
      padding: 5px;
      // position: absolute;
      bottom: 26px;
      right: 0;
      // border-radius: 20px 0px 0px 20px;
      width: 160px;
       & > p {
         color: white;
         font-size: 10px;
         display: flex;
         align-items: center;
         grid-gap: 10px;
       }
    }
  }

  svg {
    &:hover {
      & + .popup-div {
        display: block;
      }
    }
  }
  &:hover  .popup-div {
    // display: block;

  }



}
