.chargezen-plan-selector {
  margin-bottom: 1em;

  // border: 1px solid #ddd;
  // padding: 10px;
  border-radius: 5px;

  & > legend {
    display: none;
    padding: 0em 8px 0px 6px;
    font-weight: bold;
  }

  .plan-selector-group {
    margin-bottom: 1rem;
    border: 1px solid #4D506A;
    border-radius: 5px;
    padding: 11px 15px 11px 21px; 

    label {
      display: flex;
      align-items: center;
      grid-gap: 10px;
    }

    &:not(.group-available) {
      display: none;
    }

    &:not(.group-selected) > .plan-selector-plan {
      display: none;
    }

    input {
      min-height: 10px;
    }
  }

  .plan-selector-plan {
    padding-left: 20px;

    select {
      width: 100%;
      margin-bottom: 5px;
    }
  }
}

.chargezen-cart-selling-plan {
  display: block;
}
#chargezen-customer-portal-frame{
  min-height: 125vh;
}