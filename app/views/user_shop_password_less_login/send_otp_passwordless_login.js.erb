<% if @error.present? %>
    var error = "<%= @error %>";
    $("#main_error_div").removeClass("hide");
    $("#main_error_div").html(error)
<% else %>
    $("#main_error_div").addClass("hide");
    $("#main_error_div").html("")
    $(".passwordLessLogin").html("<%= j (render "/user_shop_password_less_login/otp_form_modal")%>")
<% end %>