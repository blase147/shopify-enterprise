javascript:
  $( function() {
      $( "#datepicker" ).datepicker({
        dateFormat: 'yy-mm-dd'
      });

      $( "#resume-datepicker" ).datepicker({
        dateFormat: 'yy-mm-dd'
      });

      $( ".resume-btn" ).on('click', function(e){
        e.preventDefault();
        $("#resume-billing-btn").removeClass("hidden");
        $("#resume-datepicker")[0].hidden = false;
        $('#resume-datepicker').datepicker( "show" );
      });

      $( "#resume-billing-btn" ).on('click', function(e){
        e.preventDefault();
        selectedDate = $( "#resume-datepicker" ).val();
        link = $(this).parent();
        url = $(link).attr('href');
        new_url = url + "billing_date="+selectedDate+"&action_by=admin"
        $(link).attr("href", new_url);
        link.click();
      });

      $( "#save-next-billing-date-btn" ).on('click', function(){
        selectedDate = $( "#datepicker" ).val();
        $.ajax({
          url: "/subscriptions/update_next_billing_date",
          type: "POST",
          data: { local_id: "#{@customer.id}", date: selectedDate},
          success: function(result){
            if(result.success == false){
              alert( 'Something went wrong, contact support.' );
              // $('.order-update-status-message').html(result.error.join(','))
            }else{
              // $('.order-update-status-message').html('Order synced successfully, reloading..')
              // setTimeout(function(){
                window.location.reload();
              // }, 800);
            }

          }
        });
      });

      $( "#save-delivery-date" ).on('click', function(){
        let selectedDate  = $("#new_delivery_date").val()
        if(selectedDate){
          $( "#save-delivery-date" ).hide();
          $.ajax({
            url: "/subscriptions/update_contract_delivery_date_day",
            type: "POST",
            data: { id: "#{@customer.id}", date: selectedDate},
            success: function(result){
              if(result.success == false){
                alert( 'Something went wrong, contact support.' );
                // $('.order-update-status-message').html(result.error.join(','))
              }else{
                $("#delivery_date_update_message").css("display","flex");
                $("#delivery_date_update_message").html("Delivery Date and Delivery Day Updated Successfully");
                setTimeout(function(){
                  window.location.reload();
                }, 300);
              }

            }
          });
        }
      });
    });

  $('#edit-next-billing-date').on('click', function(){
    $("#save-next-billing-date-btn").removeClass("hidden");
    $("#datepicker")[0].hidden = false;
    $('#datepicker').datepicker( "show" );
  });

  $('#edit-delivery-date').on('click', function(){
    $("#save-delivery-date").removeClass("hidden");
    $("#new_delivery_date")[0].hidden = false;
    $('#edit-delivery-date').hide();  
  });

  $( document ).on('turbolinks:load', function() {
    document.querySelectorAll('ul.payment-tabs li').forEach(li => {
      li.addEventListener('click', (e) => {
        const target = e.currentTarget;
        document.querySelectorAll('#history-tabs .tab').forEach(t => t.classList.add('hidden'));
        document.querySelector(`#history-tabs .tab${target.dataset.target}`).classList.remove('hidden');
        document.querySelector('ul.payment-tabs li.active').classList.remove('active');
        target.classList.add('active');
      })
    })
  })
