    .Polaris-Layout
      .Polaris-Layout__Section
        .Polaris-Card
          .Polaris-Card__Section
            div style="display: flex; justify-content: space-between; margin-bottom: 1rem;"
              div
                h1.Polaris-Heading
                  = customer&.display_name&.titleize
              div
                p Shopify Subscription
              div
                div style="display: flex; justify-content: space-between;"
                  p.Polaris-TextStyle--variationStrong
                    | EMAIL
                  button.Polaris-Button.Polaris-Button--plain type="button" data-toggle='modal' data-target='#customerEditModal'
                    span.Polaris-Button__Content
                      span.Polaris-Button__Text Edit
                p.Polaris-DisplayText.Polaris-TextStyle--variationSubdued #{customer&.email}


            - @subscription&.lines&.edges&.each do |line|
              - selling_plan = SellingPlan.find_by(shopify_id: line.node.selling_plan_id)
              - if @subscription.status == 'ACTIVE'
                div.item
                  div style="margin-bottom: 1rem; display: flex; justify-content: space-between; background: #F2F0F9; padding: 1rem 2rem;"
                    p style="font-size: 20px; line-height: 24px" = line.node.title
                    p style="font-size: 20px; line-height: 20px"
                      |$
                      = line.node.current_price.amount
                    div
                      - if setting.admin_allowed?('pause_subscription')
                        = link_to action_subscription_contract_path("pause", @subscription.id[/\d+/],"action_by=admin"), remote: true, method: :post, style: 'text-decoration: none;' do
                          button.Polaris-Button.Polaris-Button--plain
                            span.Polaris-Button__Content
                              span.Polaris-Button__Text Pause
                  div style="margin-top: 1.4rem; display: flex; justify-content: space-between;"
                    div.slider-btns
                      .Polaris-Stack__Item
                        - if setting.admin_allowed?('swap_product')
                          button.Polaris-Button.Polaris-Button--primary type="button" style="margin-right: 1rem;" data-toggle='modal' data-target="#swap-#{line.node.id.split("gid://shopify/SubscriptionLine/")[1]}"
                            span.Polaris-Button__Content
                              span.Polaris-Button__Text.ml-0
                                | Swap Subscription
                        button.Polaris-Button type="button" style="margin-right: 1rem;" data-toggle='modal' data-target="#editSubscriptionModal-#{line.node.id.split("gid://shopify/SubscriptionLine/")[1]}"
                          span.Polaris-Button__Content
                            span.Polaris-Button__Text.ml-0
                              | Edit
                        - if setting.admin_allowed?('subscription_cancellation')
                          button.Polaris-Button type="button" style="margin-right: 1rem;"  data-toggle='modal' data-target="#cancel-#{line.node.id.split("gid://shopify/SubscriptionLine/")[1]}"
                            span.Polaris-Button__Content
                              span.Polaris-Button__Text.ml-0
                                | Cancel
                  
                    div
                      p style="font-size: 2rem; line-height: 1.8;" = selling_plan&.name
                    div
                      a.shopify_profile_btn href="https://#{@customer.shop.shopify_domain}/admin/customers/#{@customer.shopify_customer_id}?shop=#{@customer.shop.shopify_domain}" target="_parent"
                        button.Polaris-Button
                          span.Polaris-Button__Content
                            span.Polaris-Button__Text.ml-0
                              | Shopify Profile
                  div style="display: flex; justify-content: left;"
                    .Polaris-Stack__Item style="margin: 16px;"
                      p.Polaris-Heading Delivery Day
                      p = @customer&.delivery_day
                    .Polaris-Stack__Item style="margin: 16px;"
                      p.Polaris-Heading First Delivery Date
                      p = @customer&.delivery_date&.strftime("%a, %B %e")
                      button.Polaris-Button.Polaris-Button--plain type="button" id="edit-delivery-date" Edit
                      <input type="date" id="new_delivery_date" hidden=true >
                      button.hidden.Polaris-Button--plain type="button" id="save-delivery-date" Apply
                    div#delivery_date_update_message

              - else
                - if setting.admin_allowed?('reactive_subscription')
                  .Polaris-Stack__Item
                    .Polaris-ButtonGroup.resume
                      .Polaris-ButtonGroup__Item.Polaris-ButtonGroup__Item--plain
                        = link_to "#", remote: true, style: 'text-decoration: none;' do
                          span.resume-btn type="button" Resume
                          <input type="text" id="resume-datepicker" hidden=true>
                        = link_to action_subscription_contract_path(:resume, @subscription.id[/\d+/]), remote: true, method: :post, style: 'text-decoration: none;' do
                          button.hidden.Polaris-Button--plain type="button" id="resume-billing-btn" Apply

              - if @subscription.status == 'ACTIVE'
                - product = ShopifyAPI::Product.find(line.node.product_id[/\d+/])

                = render 'app_proxy/dashboard/edit_subscription_admin_modal', subscription: @subscription, line_item: line.node, product_image: product.images.first&.src, admin_action: true, setting: setting, selling_plan_id: line.node.selling_plan_id, selling_plan: selling_plan, action_by: 'admin', product_id: product.id,contract: @customer
                = render 'app_proxy/dashboard/swap_subscription_modal', subscription: @subscription, line_item: line.node, action_by: 'admin'
                = render 'app_proxy/dashboard/upgrade_subscription_modal', subscription: @subscription, line_item: line.node, selling_plan_id: line.node.selling_plan_id, product: product, action_by: 'admin'
                = render 'app_proxy/dashboard/cancel_subscription_modal', subscription: @subscription, line_item: line.node, lines_count: @subscription.lines.edges.size, action_by: 'admin'

