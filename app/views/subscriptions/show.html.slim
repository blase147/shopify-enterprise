- customer = @subscription.customer
- order = @subscription.origin_order
- billing_policy = @subscription.billing_policy
- delivery_policy = @subscription.delivery_policy
- api_order = ShopifyAPI::Order.find(@subscription.origin_order.id[/\d+/]) rescue nil
- address = customer.default_address rescue nil
- billing_address = api_order.billing_address rescue nil
- baddress = "#{billing_address.address1} #{billing_address.city} #{billing_address.province} #{billing_address.zip} #{billing_address.country}" rescue ''
- next_billing_date =  get_next_billing_date(@subscription, current_shop)

- formatted = address.formatted.join(' ').titleize rescue nil
- formatted_billing_address = baddress
- address_id = address.id[/\d+/] rescue nil
- setting = current_shop.setting
- subscription_logs = @customer.subscription_logs.order(created_at: :desc).limit(10)
- @translation = current_shop.translation

